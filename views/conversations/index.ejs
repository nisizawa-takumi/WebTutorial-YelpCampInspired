<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>会話一覧</title>
    <!-- BootStrap CDN追加 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-light">
    <div class="container min-vh-100 py-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 mx-auto">
          <h1 class="mb-4 text-primary text-center">会話一覧</h1>
          <div class="row row-cols-1 row-cols-md-2 g-4">
            <% for (const conv of convs) { %>
            <div class="col">
              <div class="card shadow-sm">
                <div class="card-body">
                  <h5 class="card-title d-flex align-items-center gap-2">
                    <span class="badge bg-secondary">招待者</span>
                    <div class="d-flex align-items-center gap-2 mb-0">
                      <% for (const user of conv.participants) { %>
                      <span class="badge bg-success text-light"
                        ><%= user.username %></span
                      >
                      <% } %>
                    </div>
                  </h5>
                  <p class="card-text mb-1">
                    <span class="fw-bold text-danger"
                      ><%= conv.messages[0].sender.username %> さん</span
                    >
                    <span class="text-primary"
                      >- <%= conv.messages[0].content %></span
                    >
                  </p>
                  <p class="card-text">
                    <small class="text-info"
                      >作成日時: <%= conv.createdAt %></small
                    >
                  </p>
                </div>
                <div class="d-flex justify-content-end">
                  <a
                    href="/conversations/<%= conv._id %>"
                    class="btn btn-primary btn-sm"
                    >表示</a
                  >
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <!-- BootStrap JS（必要なら） -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
